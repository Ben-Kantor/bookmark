{
  "tasks": {
    "serve": "deno run --unstable-bundle --allow-env --allow-net --watch --watch-exclude='.**' --allow-read=./,.cache --allow-write='*.cache' ./server/init.ts",
    "update": "git add content/ 2>/dev/null || true && git stash push -m 'preserve content' -- content/ 2>/dev/null || true && git pull --rebase && deno update"
  },
  "lint": {
    "exclude": ["./assets/", "./content/", "./server/subset-font.ts"],
    "rules": {
      "exclude": ["no-import-prefix"]
    }
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 100,
    "indentWidth": 4,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "useBraces": "preferNone",
    "operatorPosition": "maintain"
  },
  "imports": {
    "@std/fmt": "jsr:@std/fmt@^1.0.8",
    "@std/path": "jsr:@std/path@^1.1.2"
  }
}
